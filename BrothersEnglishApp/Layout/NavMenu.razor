@using BrothersEnglishApp.Services 
@inject UserContext Context
@inject NavigationManager Nav

<div class="top-row ps-3 navbar bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand text-light" href="">BrothersEnglishApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>


<div class="@NavMenuCssClass nav-scrollable bg-light" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3 fs-4">
            <NavLink class="nav-link text-primary-emphasis" href="" Match="NavLinkMatch.All">
                <span class="me-2 fs-3">🏠</span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3 fs-4">
            <NavLink class="nav-link text-primary-emphasis" href="training">
                <span class="me-2 fs-3">📝</span> 覚える
            </NavLink>
        </div>
        <div class="nav-item px-3 fs-4">
            <NavLink class="nav-link text-primary-emphasis" href="study">
                <span class="me-2 fs-3">🏁</span> 復習
            </NavLink>
        </div>
        <div class="nav-item px-3 fs-4">
            <NavLink class="nav-link text-primary-emphasis" href="report">
                <span class="me-2 fs-3">📋</span> 成績表
            </NavLink>
        </div>
        <div class="nav-item px-3 fs-4">
            <NavLink class="nav-link text-primary-emphasis" href="wordlist">
                <span class="me-2 fs-3">📍</span> 単語一覧
            </NavLink>
        </div>
        @if (Context.IsAdmin)
        {
            @* 管理人にしか見えないメニュー *@
            <div class="nav-item px-3 fs-4">
                <NavLink class="nav-link text-primary-emphasis" href="settings">
                    <span class="me-2 fs-3">🛠️</span> アプリ設定
                    </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task HandleLogout()
    {
        await Context.LogoutAsync();
        Nav.NavigateTo("/", forceLoad: true); // 状態をクリアして戻る
    }
}
