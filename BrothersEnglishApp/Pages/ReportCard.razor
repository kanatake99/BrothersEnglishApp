@page "/report"
@using BrothersEnglishApp.Models
@using BrothersEnglishApp.Services
@inject LocalStorageService Storage
@inject WordRepository WordRepo
@inject UserContext Context

<PageTitle>成績表 - @(Context.CurrentUser)</PageTitle>

<div class="container mt-4">
    <h3 class="mb-4">🏆 @(Context.CurrentUser)くんの成績表</h3>

    @if (_allWords == null || !_allWords.Any())
    {
        <div class="alert alert-info">単語データがまだないみたい。</div>
    }
    else
    {
        @* --- 1. 今日のリザルトセクション --- *@
        <div class="card shadow-sm border-primary mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">✨ 今日の結果 (@DateTime.Now.ToString("MM/dd"))</h5>
            </div>
            <div class="card-body">
                @if (!_todayStatuses.Any())
                {
                    <p class="text-muted mb-0">今日はまだ学習の記録がないよ。これから始める？</p>
                }
                else
                {
                    <div class="row text-center mb-3">
                        <div class="col">
                            <div class="small text-muted">今日やった単語</div>
                            <div class="h3">@_todayStatuses.Count()</div>
                        </div>
                        <div class="col border-start">
                            <div class="small text-muted">正解数</div>
                            <div class="h3 text-success">@_todayCorrectTotal</div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead class="table-light small">
                                <tr>
                                    <th>単語</th>
                                    <th>結果</th>
                                    <th>時刻</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var status in _todayStatuses)
                                {
                                    var word = _allWords.FirstOrDefault(w => w.Id == status.WordId);
                                    <tr>
                                        <td><strong>@word?.Word</strong> <small class="text-muted">@word?.Meaning</small></td>
                                        <td>
                                            @if (status.Status >= 1)
                                            {
                                                <span class="text-success">○</span>
                                            }
                                            else
                                            {

                                                <span class="text-danger">×</span>
                                            }
                                        </td>
                                        <td class="small text-muted">@status.LastReviewed.ToLocalTime().ToString("HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>

        @* --- 2. 累計：ミスが多い順リスト --- *@
        <div class="card shadow mb-5">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">📝 にがてな単語（全期間）</h5>
                <span class="badge bg-danger">ミスが多い順</span>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>単語 / 意味</th>
                            <th class="text-center">ミス (×)</th>
                            <th class="text-center">正解 (○)</th>
                            <th>判定</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var status in _userProgress.WordStatuses
                                            .Where(s => s.IncorrectCount > 0) // ミスが1回以上あるもの
                                            .OrderByDescending(s => s.IncorrectCount)
                                            .ThenByDescending(s => s.LastReviewed))
                        {
                            var word = _allWords.FirstOrDefault(w => w.Id == status.WordId);
                            if (word == null) continue;

                            <tr class="@(status.IncorrectCount > status.CorrectCount ? "table-danger-subtle" : "")">
                                <td>
                                    <div class="fw-bold">@word.Word</div>
                                    <div class="small text-muted">@word.Meaning</div>
                                </td>
                                <td class="text-center text-danger fw-bold">@status.IncorrectCount</td>
                                <td class="text-center text-success">@status.CorrectCount</td>
                                <td>
                                    @if (status.IncorrectCount > status.CorrectCount)
                                    {
                                        <span class="badge bg-danger">にがて！</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success-subtle text-success">克服中</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private List<EnglishWord>? _allWords;
    private UserProgress _userProgress = new();
    private List<WordStatus> _todayStatuses = new();
    private int _todayCorrectTotal;

    protected override async Task OnInitializedAsync()
    {
        _allWords = await WordRepo.GetWordsAsync();
        var p = await Storage.LoadAsync<UserProgress>($"User_{Context.CurrentUserId}");

        if (p != null)
        {
            _userProgress = p;

            // 今日のデータ（ローカル時間で判定）
            var today = DateTime.Today;
            _todayStatuses = _userProgress.WordStatuses
                .Where(s => s.LastReviewed.ToLocalTime().Date == today)
                .OrderByDescending(s => s.LastReviewed)
                .ToList();

            _todayCorrectTotal = _todayStatuses.Count(s => s.Status >= 1);
        }
    }
}